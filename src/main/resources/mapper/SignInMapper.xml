<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mj.leapremote.dao.SignInDao" >
    <resultMap id="BaseResultMap" type="com.mj.leapremote.model.SignIn" >
        <id column="user_id" property="userId" jdbcType="VARCHAR" />
        <result column="username" property="username" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
        user_id, username
    </sql>
    <select id="getByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from leapremote_sign_in
        where binary user_id = #{userId}
    </select>
    <select id="getAll" resultMap="BaseResultMap">
        select
            *
        from leapremote_sign_in
    </select>
    <insert id="insert" parameterType="com.mj.leapremote.model.SignIn" >
        insert into leapremote_sign_in (user_id, username)
        values (#{userId}, #{username})
    </insert>
    <delete id="delete" parameterType="java.lang.String" >
        delete from leapremote_sign_in
        where user_id = #{userId}
    </delete>
    <delete id="deleteAll" >
        delete from leapremote_sign_in
    </delete>
</mapper>